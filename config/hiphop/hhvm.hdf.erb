PidFile = <%=ENV['BASE_DIR']%>/run/hhvm.pid

Server {
  
  Port = <%= ENV['PORT'] %>;
  SourceRoot = <%=ENV['BASE_DIR']%>/public/
  DefaultDocument = index.php
}

<% if ["None", "Error",].include?(ENV['LOGLEVEL']) %>
Eval {
  Jit = true
  JitASize = 67108864
  JitAStubsSize = 67108864
  JitGlobalDataSize = 16777216
}

Repo {
  Authoritative = false #switch to true once https://github.com/facebook/hiphop-php/issues/724 gets resolved
  Central {
    Path = <%=ENV['BASE_DIR']%>/run/hhvm.hhbc.sq3
  }
}

<% else %>
Eval {
  Jit = false
}

Repo {
  Authoritative = false
  Central {
    Path = <%=ENV['BASE_DIR']%>/run/hhvm.hhbc.sq3
  }
}

Debug {
  FullBacktrace = true
  ServerStackTrace = true
  ServerErrorMessage = true
  TranslateSource = true
}
<% end %>

Log {
  Level = <%=ENV['LOGLEVEL']%>
  UseLogFile = true
  File = <%=ENV['BASE_DIR']%>/logs/error.log
  Access {
    * {
      File = <%=ENV['BASE_DIR']%>/logs/access.log
      Format = %h %l %u %t \"%r\" %>s %b
    }
  }
}

VirtualHost {
  * {
    Pattern = .*
    RewriteRules {
      dirindex {
        pattern = ^/(.*)/$
        to = $1/index.php
        qsa = true
      }
    }
  }
}

StaticFile {
  FilesMatch {
    * {
      pattern = .*\.(dll|exe)
      headers {
        * = Content-Disposition: attachment
      }
    }
  }
  Extensions {
    css = text/css
    gif = image/gif
    html = text/html
    jpe = image/jpeg
    jpeg = image/jpeg
    jpg = image/jpeg
    png = image/png
    tif = image/tiff
    tiff = image/tiff
    txt = text/plain
  }
}